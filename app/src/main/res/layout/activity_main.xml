<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#00B9FB"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/yeoje"
        app:layout_constraintBottom_toTopOf="@id/car1"
        app:layout_constraintTop_toBottomOf="@id/txt_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="ContentDescription" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/car1"
        app:cardCornerRadius="12dp"
        android:backgroundTint="#C1C1C1"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginHorizontal="50sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_bar"
        app:layout_constraintBottom_toTopOf="@id/car2">

    <TextView
        android:id="@+id/txt_gmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="22sp"
        android:text="@string/gmail_orqali"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:layout_constraintVertical_bias="0.3"
        />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/car2"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50sp"
        android:backgroundTint="#C1C1C1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/car1"
        app:layout_constraintBottom_toBottomOf="parent"
        >


    <TextView
        android:id="@+id/txt_mobilePhone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:text="Telefon raqam"
        android:textStyle="italic"
        android:layout_margin="10dp"
        app:layout_constraintVertical_bias="0.3"

        />
    </androidx.cardview.widget.CardView>






</androidx.constraintlayout.widget.ConstraintLayout>